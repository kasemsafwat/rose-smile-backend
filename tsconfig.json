{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "src/DB/types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true ,
    "strict": true ,
    "skipLibCheck": true 
  },
  "include": ["src/**/*.ts", "src/DB/types/**/*.d.ts"]
}
